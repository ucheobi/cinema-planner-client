// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Ticket {
  id Int @id @default(autoincrement())
  firstName String
  lastName  String
  email String
  ticketType  String
  active  Boolean
  createdAt DateTime @default(now())
  totalCost Float
  movie Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)
  movieId Int 
  seat  Seat?
}

model Movie {
  id  Int @id @default(autoincrement())
  title String  @unique
  description   String
  date  DateTime 
  duration  String
  time  DateTime
  cost  Float
  availability String 
  tickets  Ticket[]
}

model Seat {
  id  Int @id @default(autoincrement())
  seatNumber  Int
  seatPosition  String
  ticket Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  ticketId Int @unique
}


